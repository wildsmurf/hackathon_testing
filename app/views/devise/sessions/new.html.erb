<h2>Log in to TwitterGram</h2>

<div class="ui form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "ui left aligned container" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, class: "ui left aligned container" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui left aligned container">
          <%= f.check_box :remember_me %>
        </div>
        <%= f.label :remember_me, class: "ui left aligned container" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "ui button" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
